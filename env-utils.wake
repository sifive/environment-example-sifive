global def getEnvValue var env =
 def regex = regExpCat (`^`, var.quote, `=(.*)$`, Nil)
 env
 | map regex.extract
 | flatten
 | head

global def editEnvValue var f env =
 def regex = regExpCat (`^`, var.quote, `=(.*)$`, Nil)
 def orig = getEnvValue var env
 match orig
  Some value = map (replace regex "{var}={f value}") env
  None = env
